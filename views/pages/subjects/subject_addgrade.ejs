
<%- include("../partials/head", { title: "Add grade to subject and student" }) %>
<body>
    <h3>Add student to subject: <%= subject.name %> and student: <%= student.name %></h3>
    <% const selectTeacherHtml = htmlHelper.getSelectIdCodeFromArr(teachers, "teacherId", "name", "teacherControl", "form-control", subject.teacherId) %>
    
    <form action="/subjects/view/<%= subject.id %>/student/<%= student.id %>/addgrade" method="post">
        <div>
            <label for="gradeControl" class="form-label">Grade:</label> 
            <input type="number" required min="1" max="6" step="0.5" name="grade" class="form-control" id="gradeControl">
        </div>
        <div>
            <label for="descriptionControl" class="form-label">Description:</label> 
            <input type="text" name="description" class="form-control" id="descriptionControl">
        </div>
        <div>
            <label for="schoolControl" class="form-label">
                School: <%= school.name %>
            </label>
            <input type="hidden" name="schoolId" value="<%= school.id %>">
        </div>
        <div>
            <label for="subjectControl" class="form-label">
                Subject: <%= subject.name %>
            </label>
            <input type="hidden" name="subjectId" value="<%= subject.id %>">
        </div>
        <div>
            <label for="teacherControl" class="form-label">
                Teachers available in school: <%= school.name %>
            </label>
            <%- selectTeacherHtml %>
        </div>
        <div>
            <label for="studentControl" class="form-label">
                Student: <%= student.name + " " + student.surname %>
            </label>
            <input type="hidden" name="studentId" value="<%= student.id %>">
        </div>
        <button class="btn" type="submit">
            Add grade to subject: <%= subject.name %> 
            and student:  <%= student.name %>
        </button>
    </form>

    <%- include("../partials/footer", { title: "Add grade to subject and student" }) %>
</body>
</html>